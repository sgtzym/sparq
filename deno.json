{
	"name": "@sgtzym/sparq",
	"version": "0.9.9",
	"license": "MIT",
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.17",
		"~core": "./src/core/index.ts",
		"~node": "./src/nodes/index.ts",
		"~api": "./src/api/index.ts",
		"~test": "./test/index.ts"
	},
	"exports": "./mod.ts",
	"compilerOptions": {
		"exactOptionalPropertyTypes": false
	},
	"tasks": {
		"build": "deno test --allow-all",
		"publish": "npx jsr publish --dry-run"
	},
	"fmt": {
		"indentWidth": 4,
		"lineWidth": 100,
		"semiColons": false,
		"singleQuote": true,
		"useTabs": true,

		"bracePosition": "sameLineUnlessHanging",
		"trailingCommas": "onlyMultiLine",
		"quoteProps": "asNeeded",

		"jsx.bracketPosition": "sameLine",
		"jsx.forceNewLinesSurroundingContent": false,
		"jsx.multiLineParens": "always"
	}
}
